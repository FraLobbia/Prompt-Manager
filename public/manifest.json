{
  "manifest_version": 3,
  "name": "Prompt Manager",
  "version": "1.0",
  "description": "Permette di inserire velocemente prompt testuali personalizzati. Ã‰ possibile creare set di prompt e gestirli facilmente.",
  "permissions": [
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "128.png"
  }
}